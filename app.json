{
    "name": "Video Streaming Bot",
    "description": "Telegram bot for streaming video in groups",
    "keywords": ["telegram", "python", "video", "bot"],
    "repository": "https://github.com/mafi-app/VideoStreamBot",
    "env": {
      "STRING_SESSION": {
        "description": "A Pyrogram session string.Generate it using replit",
        "required": true
      },
      "BOT_TOKEN": {
        "description": "A bot token from @BotFather.",
        "required": true
      },
      "API_ID": {
        "description": "An api ID from https://my.telegram.org/apps.",
        "required": true
      },
      "API_HASH": {
        "description": "An api hash from https://my.telegram.org/apps.",
        "required": true
      },
      "VIDEO_CHAT_ID": {
        "description": "A Group Chat Id To Stream Videos",
        "required": true
      },
      "CUSTOM_ICON": {
        "description": "A custom icon to be displayed rather than the default"
        "required": false
      }
    },
    "formation": {
        "worker": {
            "quantity": 1,
            "size": "free"
      }
    "buildpacks": [
      {
        "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest"
      },
      {
        "url": "heroku/python"
      }
    ]
  }
